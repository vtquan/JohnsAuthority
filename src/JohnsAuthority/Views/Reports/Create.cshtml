@model Report

@{
    ViewData["Title"] = "Create";
}

<h2>Create Report</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Report</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Reason" class="col-md-2 control-label"></label>
            <select asp-for="Reason" class="form-control">
                <option value="Wrong info">Wrong info</option>
                <option value="Insulting">Insulting</option>
                <option value="Inappropriate">Inappropriate</option>
            </select>
            <span asp-validation-for="Reason" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Comment" class="col-md-2 control-label"></label>
            <input asp-for="Comment" class="form-control" autofocus="autofocus" />
            <span asp-validation-for="Comment" class="text-danger" />
        </div>
        <input type="hidden" asp-for="TargetId" />
        <input type="hidden" asp-for="Type" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
