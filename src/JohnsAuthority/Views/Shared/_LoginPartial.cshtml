@using Microsoft.AspNetCore.Identity
@using JohnsAuthority.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button id="logoff-btn" type="submit" class="btn btn-link navbar-btn navbar-link" title="Log off">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" title="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" title="Log in">Log in</a></li>
    </ul>
}
